@model E_commercePro.Models.ALModel;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <div class="login_container py-5 vh-100  bg-body-secondary  d-flex justify-content-center align-items-center">
        <form method="post" class="border border-2 shadow-sm bg-white d-flex gap-5  flex-column  rounded-4 p-4 " style="min-width: 380px;">
            <h3 class="text-center mt-5 ">Login</h3>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="rounded-2 border py-2 ps-2 ">
                <div>
                    <label asp-for="UserName"></label>
                </div>
                <div>
                    <input asp-for="UserName" class="form-control"></input>
                </div>
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="rounded-2 border py-2 ps-2 ">
                <div>
                    <label asp-for="Password"></label>
                </div>
                <div>
                    <input type="password" asp-for="Password" class="form-control"></input>
                </div>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>


            <input class="border-0 mb-5 text-white py-2 px-5 bg-danger  rounded-4 " type="submit" class="btn" value="Login" />
            @if (ViewData["ValidateMessage"] != null)
            {
                <label class="text-danger">@ViewData["ValidateMessage"]</label>
            }
           
        </form>
    </div>
</body>
</html>
