                                    <img src="@Url.Content(imageUrl)" alt="">
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">

                <div class="product__details__text">
                    <h3>@Model.Product.Name </h3>
                    <div class="rating">
                        <div>
                            <h4> Rating</h4>
                            @if (Model.Product.Ratings != null && Model.Product.Ratings.Any())
                            {
                                var fullStars = Enumerable.Repeat("★", (int)Math.Floor(Model.Product.Ratings.Average(r => r.Stars)));
                                var emptyStars = Enumerable.Repeat("☆", 5 - (int)Math.Ceiling(Model.Product.Ratings.Average(r => r.Stars)));
                                <p>@String.Concat(fullStars.Concat(emptyStars))</p>
                            }
                            else
                            {
                                <p>No ratings yet</p>
                            }
                        </div>
                   
                    </div>
                    <div class="product__details__price">₹@Model.DiscountedPrice <span class="original-price">(₹@Model.Product.Price)</span>
        
                    </div>
                    <p>
                       @Model.Product.Description
                    </p>
                    <div class="product__details__button">
                        
